{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "rootDir": "src",
    "sourceMap": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "lib": [
      "dom",
      "es2015",
      "es2016"
    ],
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "importHelpers": true,
    "strict": false,
    "allowJs": true,
    "noImplicitReturns": true,
  },
  "exclude": [
    "index.android.js",
    "index.ios.js",
    "index.windows.js",
    "index.web.js",
    "index.js",
    "node_modules",
    "__test",
  ]
}